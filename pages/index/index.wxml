
<view class="page">
    <view class="page__hd">
        <view class="page__title">苹果甜不甜呀？</view>
    </view>
    <view class="page__bd">
        <view class="weui-grids">
            <block wx:for="{{grids}}" wx:item="item" wx:key="*this">
                <view id="{{item.id}}" bindtap='itemClick' class="weui-grid" hover-class="weui-grid_active"> 
                    <image class="weui-grid__icon" src="{{item.icon}}" />
                    <view class="weui-grid__label">{{item.label}}</view>
                </view>
            </block>
        </view>
    </view>
</view>